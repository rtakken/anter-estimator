<%= turbo_frame_tag dom_id(message) do %>
    <div class="<%= message.role == "assistant" ? "bg-gray-100" : "" %> flex flex-row items-start">
        <div class="font-semibold w-24 flex-shrink-0"><%= message.role %></div>
        <div class="flex flex-row gap-y-1">
          <div>
            <% if message.image.present? %>
              <div class="w-[200px] h-[200px]">
                  <%= image_tag message.image %>
              </div>
            <% end %>
          </div>
          <div>
            <%= message.content %>
          </div>
        </div>
    </div>
<% end %>