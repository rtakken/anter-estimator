<%= form_with model: @message, local: true, class: "flex flex-row w-full", multipart: true do |f| %>
  <%= hidden_field_tag :id, params[:id] %>
  <%= f.hidden_field :role, value: "user" %>
  <div class="flex flex-grow items-center gap-2 px-4">
    <%= f.file_field :image, class: "text-sm", accept: "image/*" %>
    <%= f.text_field :content, class: "flex-grow px-4 py-2 focus:outline-none focus:border-blue-500", placeholder: "Type your message...", required: true %>
  </div>
  <%= f.submit "Send", class: "bg-blue-500 text-white px-6 py-2 rounded-r hover:bg-blue-600", data: { disable_with: false } %>
<% end %>